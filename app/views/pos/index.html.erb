<h1>Listing pos</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Price</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pos.each do |po| %>
  <tr>
    <td><%= po.name %></td>
    <td><%= po.category %></td>
    <td><%= po.price %></td>
    <td><%= po.quantity %></td>
    <td><%= link_to 'Show', po %></td>
    <td><%= link_to 'Edit', edit_po_path(po) %></td>
    <td><%= link_to 'Destroy', po, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

